            /* Tree */
            .tTreeItem,
            .tTreeItem * {
                padding:    0;
            margin:     0;
            list-style: none;
            }

            .tTreeItem label[for]::before,
            .tTreeItem label span::before {
                content:        "\25b6";
                display:        inline-block;
                margin:         2px 0 0;
                width:          13px;
                height:         13px;
                vertical-align: top;
                text-align:     center;
            /*color:          #e74c3c;*/
                font-size:      8px;
                line-height:    13px;
            }

            .tTreeItem li ul {
                margin: 0 0 0 22px;
            }

            .tTreeItem * {
                vertical-align: middle;
            }

            .tTreeItem {
                font: normal 11px/16px "Segoe UI", Arial, Sans-serif;
            }

            .tTreeItem li {
                -webkit-user-select: none;
                -moz-user-select:    none;
                user-select:         none;
            }

            .tTreeItem input[type="checkbox"] {
                display: none;
            }

            .tTreeItem label {
                cursor: pointer;
            }

            .tTreeItem label[for]::before {
                -webkit-transform: translatex(-24px);
                -moz-transform:    translatex(-24px);
                -ms-transform:     translatex(-24px);
                -o-transform:      translatex(-24px);
                transform:         translatex(-24px);
            }

            .tTreeItem label span::before {
                -webkit-transform: translatex(16px);
                -moz-transform:    translatex(16px);
                -ms-transform:     translatex(16px);
                -o-transform:      translatex(16px);
                transform:         translatex(16px);
            }

            .tTreeItem input[type="checkbox"][id]:checked ~ label[for]::before {
                content: "\25bc";
            }

            .tTreeItem input[type="checkbox"][id]:not(:checked) ~ ul {
                display: none;
            }

            .tTreeItem label:not([for]) {
                margin: 0 8px 0 0;
            }

            .tTreeItem label span::before {
                content: "";
            border:  solid 1px white;
            color:   white;
            opacity: .50;
            }

            .tTreeItem label input:checked + span::before {
                content:    "\2714";
            box-shadow: 0 0 2px rgba(0, 0, 0, 0.25) inset;
            opacity:    1;
            }

